[Unit]
Description=Zookeeper
After=network.target

[Service]
Type=forking
Restart=always
RestartSec=0s
User={{zookeeper.user}}
Group={{zookeeper.group}}
Environment=JAVA_HOME={{JAVA_HOME}}
Environment=ZOO_LOG_DIR=/var/log/zookeeper
ExecStart=/usr/local/zookeeper/bin/zkServer.sh start {{ zookeeper.conf_dir }}/zoo.cfg
ExecStop=/usr/local/zookeeper/bin/zkServer.sh stop {{ zookeeper.conf_dir }}/zoo.cfg

[Install]
WantedBy=multi-user.target
